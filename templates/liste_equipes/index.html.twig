{% extends 'base.html.twig' %}

{% block title %}Hello
{% endblock %}

{% block body %}

	<h3>Salut,
		{{ app.user.person.prenom }}!
	</h3>

	<div class="centre">
		<table class="table">
			<thead>
				<tr>
					<th scope="col">*</th>
					<th scope="col">nom</th>
					<th scope="col">numero</th>
					<th scope="col">genre</th>
				</tr>
			</thead>
			<tbody>
				{% for equipe in equipesWithDetails %}
					<tr>
						<th scope="row">{{ equipe.nom }}</th>
						<td>{{ equipe.numeroEquipe }}</td>
						<td>{{ equipe.categorieGenre }}</td>
					{% endfor %}
					<td>
						<button type="button" class="btn btn-dark">modifier</button>
					</td>
				</tr>
			</tbody>
		</table>
	</div>

{% endblock %}
